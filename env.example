# WordPress Article Editor Environment Variables

# OpenAI API Key (required for article generation)
OPENAI_API_KEY=your_openai_api_key_here

# SERP API Key (optional, for source links)
SERPAPI_KEY=your_serpapi_key_here

# Pixabay API Key (for free images and videos)
PIXABAY_API_KEY=52504189-dab15ad33118b88e83246a7cb

# Openverse API Credentials (for openly-licensed media)
OPENVERSE_CLIENT_ID=your_openverse_client_id_here
OPENVERSE_CLIENT_SECRET=your_openverse_client_secret_here

# Google Custom Search API (for internet image search)
GOOGLE_CUSTOM_SEARCH_API_KEY=your_google_custom_search_api_key_here
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your_google_custom_search_engine_id_here

# Vercel Postgres Database (automatically set by Vercel)
# These will be automatically provided when you add Vercel Postgres to your project
POSTGRES_URL=postgres://username:password@host:port/database
POSTGRES_PRISMA_URL=postgres://username:password@host:port/database?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NON_POOLING=postgres://username:password@host:port/database
POSTGRES_USER=username
POSTGRES_HOST=host
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=database

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
